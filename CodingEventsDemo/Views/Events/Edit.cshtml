<h1>@ViewBag.title</h1>

<form method="post">
    action="/Events/Edit">
    <div class="form-group">
        <label for="eventId">Id</label>
        <input type="hidden" value="@ViewBag.eventEdit.Id" name="eventId" />
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" value="@ViewBag.eventEdit.Name" type="text" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" type="text" value="@ViewBag.eventEdit.Description" />
    </div>

    <div>
        <input type="submit" value="Edit Event" />
    </div>
</form>
